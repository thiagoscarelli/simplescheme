relsize             bar_gap                 0 // distance btw bars not in an over() group (default: 0pct)
relsize             bar_groupgap            0 // distance btw bars in the first over() group (default: 67pct)
relsize             bar_supgroupgap         100 // distance btw bars in the second over() group (default: 200pct)
relsize             bar_outergap            0 // distance btw outermost bars and plotregion boundaries (default: 20pct)
   
